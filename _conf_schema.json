{
    "base_url": {
        "description": "API Base URL",
        "type": "string",
        "default": "https://ai.gitee.com/v1",
        "hint": "Gitee AI API 地址"
    },
    "api_key": {
        "description": "API 密钥 (支持多 Key 轮询)",
        "type": "list",
        "hint": "Gitee AI API Key，支持配置多个 Key 以实现轮询调用",
        "default": [],
        "obvious_hint": true
    },
    "model": {
        "description": "使用的模型名称",
        "type": "string",
        "default": "z-image-turbo",
        "hint": "例如: z-image-turbo"
    },
    "size": {
        "description": "图片大小",
        "type": "string",
        "default": "1024x1024",
        "hint": "例如: 1024x1024"
    },
    "num_inference_steps": {
        "description": "推理步数",
        "type": "int",
        "default": 9,
        "hint": "推理步数，默认 9"
    },
    "cache_cleanup_enabled": {
        "description": "启用自动清理缓存",
        "type": "bool",
        "default": true,
        "hint": "是否自动清理过期的图片缓存"
    },
    "cache_max_age_hours": {
        "description": "图片最大保留时间（小时）",
        "type": "int",
        "default": 24,
        "hint": "超过此时间的图片将被清理"
    },
    "cache_max_count": {
        "description": "最大保留图片数量",
        "type": "int",
        "default": 200,
        "hint": "超过此数量时，优先删除最旧的图片"
    },
    "cache_protect_minutes": {
        "description": "图片保护期（分钟）",
        "type": "int",
        "default": 5,
        "hint": "此时间内的图片不会被清理，防止删除正在发送的图片"
    },
    "cache_cleanup_interval_minutes": {
        "description": "清理任务执行间隔（分钟）",
        "type": "int",
        "default": 30,
        "hint": "定时清理任务的执行间隔"
    }
}
